<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.itude.apt.prophiles.activities.EditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_editProfile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="@dimen/margin_toolbar"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_padding_medium"
            android:paddingRight="@dimen/margin_padding_medium">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_touchable"
                android:gravity="center_vertical"
                android:text="@string/editProfile_name"
                android:textSize="@dimen/text_small"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/editText_editProfile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/editProfile_nameHint"
                android:inputType="textCapWords"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_touchable"
                android:gravity="center_vertical"
                android:text="@string/editProfile_actions"
                android:textSize="@dimen/text_small"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/linearLayout_editProfile_wifiState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_padding_small"
                android:paddingTop="@dimen/margin_padding_small">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/editProfile_wifiState"
                    android:textSize="@dimen/text_medium"/>

                <TextView
                    android:id="@+id/textView_editProfile_wifiState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/all_no_override"
                    android:textSize="@dimen/text_small"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_editProfile_bluetoothState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_padding_small"
                android:paddingTop="@dimen/margin_padding_small">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/editProfile_bluetoothState"
                    android:textSize="@dimen/text_medium"/>

                <TextView
                    android:id="@+id/textView_editProfile_bluetoothState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/all_no_override"
                    android:textSize="@dimen/text_small"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_editProfile_locationMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_padding_small"
                android:paddingTop="@dimen/margin_padding_small">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/editProfile_locationMode"
                    android:textSize="@dimen/text_medium"/>

                <TextView
                    android:id="@+id/textView_editProfile_locationMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/all_no_override"
                    android:textSize="@dimen/text_small"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_editProfile_ringVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_padding_small"
                android:paddingTop="@dimen/margin_padding_small">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/editProfile_ringVolume"
                    android:textSize="@dimen/text_medium"/>

                <TextView
                    android:id="@+id/textView_editProfile_ringVolume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/all_no_override"
                    android:textSize="@dimen/text_small"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
