<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/margin_padding_small"
              android:paddingLeft="@dimen/margin_padding_medium"
              android:paddingRight="@dimen/margin_padding_medium"
              android:paddingTop="@dimen/margin_padding_small">

    <CheckBox
        android:id="@+id/checkBox_volumePickerDialog_noOverride"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_touchable"
        android:text="@string/all_no_override"/>

    <SeekBar
        android:id="@+id/seekBar_volumePickerDialog_volume"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_touchable"/>
</LinearLayout>